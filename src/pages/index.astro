---
import Layout from '../layouts/Layout.astro';
import { Header } from '../components/Header';
import { Hero } from '../components/Hero';
import { About } from '../components/About';
import { Projects } from '../components/Projects';
import { Footer } from '../components/Footer';
import { SocialSidebar } from '../components/SocialSidebar';
---

<Layout>
  <div class="min-h-screen bg-black text-white">
    <div class="relative">
      <!-- Background gradient -->
      <div class="absolute inset-0 bg-gradient-to-br from-purple-900/20 via-black to-blue-900/20"></div>
      <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-purple-900/20 via-black to-transparent"></div>

      <!-- Social Sidebar -->
      <SocialSidebar client:load />

      <div class="relative z-10">
        <Header client:load />
        <Hero client:load />
        <About client:load />
        <Projects client:load />
        <Footer client:load />
      </div>
    </div>
  </div>
</Layout>
