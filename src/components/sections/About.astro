---
import { AboutTitle } from "../react/AboutTitle";
import { ExperienceGrid } from "../react/ExperienceGrid";
import { SkillsGrid } from "../react/SkillsGrid";
import { SKILLS, EXPERIENCES } from "@/constants/portfolio-data";
---

<section
  id="about"
  class="min-h-screen flex items-center justify-center pt-16 sm:pt-20 md:pt-24 lg:pt-28 xl:pt-32 pb-12 sm:pb-16 md:pb-20 px-2 sm:px-3 md:px-4 lg:px-6 xl:px-8"
>
  <div class="max-w-7xl mx-auto w-full">
    <AboutTitle
      title="Mi Experiencia"
      description="Junior Frontend Developer especializado en React, Next.js y TypeScript. Mi experiencia como Frontend Engineer Intern en Freepik me ha preparado para crear interfaces de usuario funcionales y orientadas al usuario. Mi formación previa en informática y diseño gráfico complementa mis habilidades, permitiéndome abordar los proyectos con una visión integral."
      client:visible
    />

    <div class="mb-8 sm:mb-12 md:mb-16">
      <ExperienceGrid experiences={EXPERIENCES} client:visible />
    </div>

    <div class="mb-8 sm:mb-12 md:mb-16">
      <h3 class="text-2xl sm:text-3xl md:text-4xl font-bold text-center mb-6 sm:mb-8 md:mb-10">
        <span class="bg-gradient-to-r from-white to-gray-300 bg-clip-text text-transparent">
          Habilidades
        </span>
      </h3>
      <SkillsGrid skills={SKILLS} client:visible />
    </div>
  </div>
</section>
