---
import { HeroContent } from '../react/HeroContent';
import { HeroArrow } from '../react/HeroArrow';
---

<section
  id="home"
  class="h-screen flex items-center justify-center px-2 sm:px-3 md:px-4 lg:px-6 xl:px-8 relative overflow-hidden"
>
  <!-- Animated background gradients - Responsive sizes -->
  <div class="absolute inset-0 opacity-15">
    <div class="absolute top-1/4 left-1/4 w-48 h-48 sm:w-64 sm:h-64 md:w-80 md:h-80 lg:w-96 lg:h-96 bg-purple-600/60 rounded-full mix-blend-multiply filter blur-3xl animate-blob"></div>
    <div class="absolute top-1/3 right-1/4 w-48 h-48 sm:w-64 sm:h-64 md:w-80 md:h-80 lg:w-96 lg:h-96 bg-blue-600/60 rounded-full mix-blend-multiply filter blur-3xl animate-blob animation-delay-2000"></div>
    <div class="absolute bottom-1/4 left-1/3 w-40 h-40 sm:w-56 sm:h-56 md:w-72 md:h-72 lg:w-96 lg:h-96 bg-pink-600/50 rounded-full mix-blend-multiply filter blur-3xl animate-blob animation-delay-4000"></div>
    <div class="absolute bottom-1/3 right-1/3 w-40 h-40 sm:w-52 sm:h-52 md:w-64 md:h-64 lg:w-80 lg:h-80 bg-indigo-600/50 rounded-full mix-blend-multiply filter blur-3xl animate-blob animation-delay-6000"></div>
  </div>

  <div class="max-w-7xl mx-auto w-full relative z-10 flex flex-col items-center justify-center h-full pt-20 sm:pt-24 md:pt-20 lg:pt-16">
    <!-- Centered content -->
    <div class="flex flex-col items-center justify-center text-center flex-1">
      <HeroContent client:load />
    </div>

    <!-- Flecha animada - Hidden on small screens -->
    <div class="hidden sm:block absolute bottom-8">
      <HeroArrow client:load />
    </div>
  </div>
</section>
