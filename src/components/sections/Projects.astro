---
import { ProjectsTitle } from '../react/ProjectsTitle';
import { ProjectCard } from '../react/ProjectCard';

// Datos del servidor - se ejecutan en build time
const projects = [
  {
    title: "Pixela",
    description: "Plataforma de series y películas de reseñas y valoraciones desarrollada para mi TFG en desarrollo de aplicaciones web",
    image: "/1.png",
    tech: ["React", "Next.js", "Tailwind", "TypeScript","Laravel", "MariaDB"],
    github: "https://github.com/envyx10/Pixela",
  },
  {
    title: "Freepik",
    description: "Desarrollo de aplicación interna para Freepik en mi periodo de prácticas como Frontend Engineer",
    image: "/2.png",
    tech: ["React", "TypeScript", "NextJS", "Tailwind"],
    website: "https://www.freepik.es/",
  },
  {
    title: "Pixela Figma Design",
    description: "Diseño completo del proyecto Pixela en Figma, incluyendo prototipos interactivos y sistema de diseño",
    image: "/3.png",
    tech: ["Figma", "UI/UX"],
    website: "https://www.figma.com/design/CPQe3LpPHQXKW1AWTYJhOG/PROYECTO-PIXELA.IO?node-id=0-1&p=f&t=xpIvV40gZcN5Tr4q-0"
  },
];
---

<section id="projects" class="min-h-screen flex items-center justify-center py-16 sm:py-20 px-3 sm:px-4 md:px-6">
  <div class="max-w-7xl mx-auto w-full">
    <!-- Título con animación (React) -->
    <div class="mb-12 sm:mb-16">
      <ProjectsTitle client:visible />
    </div>

    <!-- Grid de proyectos con animaciones (React) - Responsive -->
    <div class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-6 sm:gap-8 place-items-stretch">
      {projects.map((project) => (
        <div class="flex h-full min-h-[400px] sm:min-h-[450px]">
          <ProjectCard project={project} client:visible />
        </div>
      ))}
    </div>
  </div>
</section>
